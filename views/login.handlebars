<div class="row justify-content-center mb-5 w-100">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Ingresar</h3></div>
            <div class="card-body">
                <form method='post' action='/login'>
                    {{#if error }}
                    <div class="form-group">
                        <span class='medium text-danger'>{{ error }}</span>
                    </div>
                    {{/if}}
                    <div class="form-group">
                        <label class="small mb-1" for="inputEmailAddress">Email o Username</label>
                        <input class="form-control py-4" id="inputEmailAddress" name='email' type="text" placeholder="Email o username" value="{{ credentials.email }}"/>
                    </div>
                    <div class="form-group">
                        <label class="small mb-1" for="inputPassword">Contraseña</label>
                        <input class="form-control py-4" id="inputPassword" type="password" name='password' placeholder="Contraseña" value="{{ credentials.password }}"/>
                    </div>

                    <div class="form-group">
                        <input type='submit' class="btn btn-primary btn-block" value='Ingresar' />
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <div class="small"><a href="/register">Registrarme</a></div>
            </div>
        </div>
    </div>
</div>